<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    tools:context=".RegistrationPage">

    <ProgressBar
        android:id="@+id/registrationPageProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationPageRegisterButton"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find your motive"
        app:layout_constraintBottom_toTopOf="@+id/registrationPageFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appLogo"
        app:layout_constraintVertical_bias="0.009"
        android:textColor="@color/purple_500"
        android:textSize="18sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/appLogo"
        android:layout_width="339dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="RUNRUN"
        android:textAlignment="center"
        android:textSize="48sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/purple_700"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/registrationPageFirstName"
        android:layout_width="356dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/registrationPageLastName"
        app:layout_constraintEnd_toEndOf="@id/registrationPageRegisterButton"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@id/registrationPageRegisterButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border"
        android:paddingLeft="15dp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/registrationPageAge"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/registrationPageEmailId"
        app:layout_constraintEnd_toEndOf="@id/registrationPageRegisterButton"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@id/registrationPageRegisterButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border"
        android:paddingLeft="15dp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/registrationPagePassword"
        android:layout_width="354dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/registrationPageRegisterButton"
        app:layout_constraintEnd_toEndOf="@id/registrationPageRegisterButton"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@id/registrationPageRegisterButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border"
        android:paddingLeft="15dp"
        app:layout_constraintVertical_bias="0.924" />

    <Button
        android:id="@+id/registrationPageRegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Sign-Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775" />

    <EditText
        android:id="@+id/registrationPageEmailId"
        android:layout_width="356dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/registrationPagePassword"
        app:layout_constraintEnd_toEndOf="@id/registrationPageRegisterButton"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@id/registrationPageRegisterButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border"
        android:paddingLeft="15dp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/registrationPageLastName"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/registrationPageAge"
        app:layout_constraintEnd_toEndOf="@id/registrationPageRegisterButton"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@id/registrationPageRegisterButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border"
        android:paddingLeft="15dp"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

